        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proprietario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proprietario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
